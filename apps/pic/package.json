{
  "name": "@delta/pic",
  "version": "1.0.0",
  "description": "PIC App - Training Registration & Management System",
  "private": true,
  "main": "backend/server.js",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev --filter=@delta/pic",
    "build": "turbo run build --filter=@delta/pic",
    "start": "node backend/server.js",
    "test": "jest",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "cd backend && npm run prisma:migrate",
    "db:push": "cd backend && npm run prisma:db:push",
    "db:seed": "cd backend && npm run prisma:seed",
    "db:studio": "cd backend && npm run prisma:studio"
  },
  "keywords": [
    "training",
    "registration",
    "pic",
    "k3",
    "certification"
  ],
  "author": "Delta Indonesia",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.10.0",
    "@prisma/client": "^5.9.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "prisma": "^5.9.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
