# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://deltauser:password123@postgres:5432/pic_app
DB_HOST=postgres
DB_PORT=5432
DB_NAME=pic_app
DB_USER=deltauser
DB_PASSWORD=password123
DB_SCHEMA=public

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=5000
NODE_ENV=development
LOG_LEVEL=debug

# ============================================================================
# CORS & SECURITY
# ============================================================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# AUTHENTICATION
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# ============================================================================
# FILE STORAGE (S3)
# ============================================================================
AWS_REGION=ap-southeast-1
AWS_BUCKET=pic-app-documents
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
FILE_UPLOAD_PATH=/uploads
MAX_FILE_SIZE=10485760

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@deltaindo.com
MAIL_FROM_NAME="Delta Indonesia"

# ============================================================================
# WHATSAPP CONFIGURATION
# ============================================================================
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER=62812345678
WHATSAPP_ENABLED=false

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_WHATSAPP_ENABLED=false
NOTIFICATION_SMS_ENABLED=false

# ============================================================================
# REDIS CONFIGURATION (optional, for caching/sessions)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=false

# ============================================================================
# CERTIFICATE CONFIGURATION
# ============================================================================
CERTIFICATE_PDF_PATH=/certificates
CERTIFICATE_TEMPLATE_PATH=/templates/certificate.pdf
CERTIFICATE_VALIDITY_YEARS=2

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_FILE_PATH=/logs
SENTRY_DSN=
SENTRY_ENABLED=false

# ============================================================================
# PAGINATION DEFAULTS
# ============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_AUTO_SEEDING=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_CERTIFICATE_GENERATION=true
FEATURE_DOCUMENT_VERIFICATION=true
